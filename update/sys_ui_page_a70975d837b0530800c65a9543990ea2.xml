        <html><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
<g:requires name="angularjs.min.1.6.6.jsdbx" />	
<link rel="stylesheet" href="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.css" />
<script src="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.js"></script>	
	
<script src="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.js"></script>

	<g:macro_invoke macro="ngtable_add_button" />	
<script src="x_regho_ngt.sortapp.jsdbx"></script>	


			  
<div class="container" ng-app="sortApp" ng-controller="mainController">
 
  <div class="alert alert-info">
    <p>Sort Type: {{ sortType }}</p>
    <p>Sort Reverse: {{ sortReverse }}</p>
    <p>Search Query: {{ searchSoftware }}</p>
  </div>
  
  <form>
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon"><i class="fa fa-search"></i></div>
		 <br></br>
			  <input type="text"  ng-model="pc"  ng-blur="searchpc($event)"></input>
		 <br></br>
        <input type="text" class="form-control" placeholder="SÃ¸g  efter ..." ng-model="searchSoftware"></input>
      </div>      
    </div>
  </form>

  <table class="table table-bordered table-striped">
    
    <thead>
      <tr>
        <td>
          <a href="#" ng-click="sortType = 'Software'; sortReverse = !sortReverse">
            Software 
            <span ng-show="sortType == 'Software' &amp;&amp; !sortReverse" class="fa fa-caret-down"></span>
            <span ng-show="sortType == 'Software' &amp;&amp; sortReverse" class="fa fa-caret-up"></span>
          </a>
        </td>
        <td>
          <a href="#" ng-click="sortType = 'Version'; sortReverse = !sortReverse">
          Version
            <span ng-show="sortType == 'Version' &amp;&amp; !sortReverse" class="fa fa-caret-down"></span>
            <span ng-show="sortType == 'Version' &amp;&amp; sortReverse" class="fa fa-caret-up"></span>
          </a>
        </td>
        <td>
          <a href="#" ng-click="sortType = 'Fabrikant'; sortReverse = !sortReverse">
          Fabrikant 
            <span ng-show="sortType == 'Fabrikant' &amp;&amp; !sortReverse" class="fa fa-caret-down"></span>
            <span ng-show="sortType == 'Fabrikant' &amp;&amp; sortReverse" class="fa fa-caret-up"></span>
          </a>
        </td>
		  <td></td>
		  <td>Install</td>
      </tr>
    </thead>
    
    <tbody>
      <tr ng-repeat="sw in swlist | orderBy:sortType:sortReverse | filter:searchSoftware">
        <td>{{ sw.Software }}</td>
        <td>{{ sw.Version }}</td>
        <td>{{ sw.Fabrikant }}</td>
				 
		  <td>
                        <button ng-click="accept(sw.idx)" ng-disabled="sw.accept" ><strong>accept</strong>

                        </button>
                        <button ng-click="refuse(sw.idx)" ng-disabled="sw.refuse" ><strong>refuse</strong>

                        </button>
			  
                    </td>
		  <td><input type="checkbox" ng-model="checkboxModel.value1"  ng-click="checkbox(sw.idx, checkboxModel.value1)"></input> </td>
		  
      </tr>
    </tbody>
    
  </table>
 
</div>		
	
	
	
	
	
